{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./app/*"
            ]
        },
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "app/**/*",
        "components/**/*",
        "pages/**/*"
    ]
}